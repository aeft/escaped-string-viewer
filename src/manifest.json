{
    "manifest_version": 3,
    "name": "Inline Escaped String Renderer",
    "description": "Render selected escaped strings (e.g., \n, \t) in a floating preview panel.",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Inline Escaped String Renderer Settings"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-bundled.js"
            ],
            "run_at": "document_idle"
        }
    ]
}